<div class="row">
   <div class="col-md-8">
     <div class="media">
       <br />
       <% avatar_url = @user.avatar_url(128) %>
       <% if avatar_url %>
         <div class="media-left">
           <%= image_tag avatar_url, class: 'media-object' %>
         </div>
       <% end %>
       <div class="media-body">
         <h2 class="media-heading"><%= @user.name %></h2>
         <small>
           <%= pluralize(@user.posts.count, 'post') %>,
           <%= pluralize(@user.comments.count, 'comment') %>
         </small>
       </div>
     </div>
   </div>
 </div>
 
 <div class="row">
   <div class="col-md-8">
    <h2>Posts</h2>
    <% if has_posts?(@user) %>
      <%= render @user.posts %>
    <% else %>
      <p><%= @user.name %> has not posted yet. </p>
    <% end %>  
    <h2>Comments</h2>
    <% if has_comments?(@user) %>
      <%= render @user.comments %>
    <% else %>
      <p><%= @user.name %> has not commented yet. </p>
    <% end %> 
    
    <h2>Favorites</h2>
    <% if has_favorites?(@user) %>
    <% @favorite_posts.each do |favs| %>
      <%= render favs %>
        <% avatar_url = @user.avatar_url(48) %>
        <% if avatar_url %>
          <div class="media-left">
           <%= image_tag avatar_url, class: 'media-object' %>
          </div>
        <% end %>
    <% end %>
  <% else %>
    <p><%= @user.name %> has no favorites yet.</p>
  <% end %>
  </div>
 </div>
